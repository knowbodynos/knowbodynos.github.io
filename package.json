{
  "name": "tailwind-nextjs-starter-blog",
  "version": "2.4.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "next dev",
    "dev": "npx concurrently \"npx contentlayer2 dev\" \"cross-env INIT_CWD=$PWD next dev\"",
    "dev:turbopack": "npx concurrently \"npx contentlayer2 dev\" \"cross-env INIT_CWD=$PWD TURBOPACK=1 next dev --turbo\"",
    "build": "npx contentlayer2 build && cross-env INIT_CWD=$PWD next build && cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/postbuild.mjs",
    "serve": "next start",
    "build:static": "npx contentlayer2 build && cross-env INIT_CWD=$PWD NEXT_STATIC_EXPORT=1 next build && next export -o out",
    "export": "cross-env INIT_CWD=$PWD NEXT_STATIC_EXPORT=1 next build && next export -o out",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir app --dir components --dir lib --dir layouts --dir scripts",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@next/bundle-analyzer": "15.2.4",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.0.5",
    "@tailwindcss/typography": "^0.5.15",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-table": "^8.21.3",
    "body-scroll-lock": "^4.0.0-beta.0",
    "clsx": "^2.1.1",
    "contentlayer2": "0.5.5",
    "esbuild": "0.25.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.2",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "image-size": "^2.0.2",
    "lucide-react": "^0.562.0",
    "mongodb": "^7.0.0",
    "next": "16.1.4",
    "next-contentlayer2": "0.5.5",
    "next-themes": "^0.4.6",
    "pliny": "0.4.1",
    "postcss": "^8.4.24",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.70.0",
    "react-pdf": "^10.3.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.3.0",
    "rehype-katex": "^7.0.0",
    "rehype-katex-notranslate": "^1.1.4",
    "rehype-preset-minify": "7.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.0",
    "remark-gfm": "^4.0.0",
    "remark-github-blockquote-alert": "^1.2.1",
    "remark-math": "^6.0.0",
    "tailwindcss": "^4.0.5",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@svgr/webpack": "^8.0.1",
    "@types/mdx": "^2.0.12",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.28",
    "@typescript-eslint/eslint-plugin": "^8.12.0",
    "@typescript-eslint/parser": "^8.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "eslint-plugin-react-query": "^1.3.0",
    "globals": "^15.12.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.6.1"
}
